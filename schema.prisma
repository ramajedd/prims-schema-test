model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  content   String?
  published Boolean  @default(false)

  authorId  Int?
  author    User?     @relation(fields: [authorId], references: [id])
}


model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?

  posts   Post []
}
